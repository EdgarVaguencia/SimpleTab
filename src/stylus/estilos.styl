#content
  position absolute
  bottom 0
  left 0
  right 0
  top 0
  width 100%
  height 100%
  overflow hidden
  #img
    background-size cover
    height 100%
    overflow hidden
  #time, #events
    position absolute
    width 100%
    margin 0
    padding 0
  #time
    text-align center
    top 10%
    span#clock
      color white
      font-size 100px
      text-shadow 2px 6px 6px rgba(0, 0, 0, .6)
  #events
    bottom 10%
    height 8px
    #current, .hour
      position absolute
      height inherit
    #current
      background rgba(0, 0, 0, 0.6)
      z-index 9999
    .hour
      background rgba(200, 200, 200, 0.3)
      cursor pointer 
      font-size 9px
      overflow hidden
      text-align center
